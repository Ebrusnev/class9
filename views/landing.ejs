<!DOCTYPE html>
<html>
<head>
	<title>Sign Up For Free!</title>

	<script
		src="https://code.jquery.com/jquery-2.2.4.min.js"
		integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44="
		crossorigin="anonymous">
  	</script>

	<!-- Latest compiled and minified CSS -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

	<!-- Latest compiled and minified JavaScript -->
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

	<script type="text/javascript" src="ajax.js"></script>
</head>
<body>
	 <nav class="navbar navbar-inverse">
      <div class="container">
        <div id="navbar" class="navbar-collapse collapse">
        </div><!--/.navbar-collapse -->
      </div>
    </nav>

    <div class="container">
      <!-- Example row of columns -->
      <div class="row">
      		<% articles.forEach(function(artcl) {%>	        
	      		<div class="col-xs-12 col-md-4">
		          <h2><%=artcl.name%></h2>
		          <p><%=artcl.body%></p>
		          <p><a class="btn btn-default" href="/<%=artcl.id%>" role="button">View details &raquo;</a></p>
		        </div> 			
      		<% }); %>
	      </div>
      <hr>
      <form class="center-block" style="max-width: 40%; margin-bottom: 10px">
		  <div class="form-group center-block">
		    <input type="text" class="form-control" id="inputName" placeholder="Name">
		  </div>
		  <div class="form-group">
		    <input type="email" class="form-control" id="inputEmail" placeholder="Email">
		  </div> 
		  <div class="form-group">
		    <input type="number" class="form-control" id="inputMobile" placeholder="Mobile Number">
		  </div> 
		  <div class="form-group">
		    <input type="text" class="form-control" id="inputSubject" placeholder="Subject">
		  </div>		  
		  <div class="form-group">
		    <textarea type="text" class="form-control" rows="5" id="inputMessage" placeholder="Message"></textarea>
		  </div>
		  <button type="submit" class="btn btn-lg btn-primary pull-right center-block" style="padding: 5px 16px;">Submit Form</button>
		</form>
		<br>
		<hr>
      <footer>
        <p>&copy; 2017 Company, Inc.</p>
      </footer>
    </div> <!-- /container -->
</body>
</html>